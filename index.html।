    <script>
        const resBox = document.getElementById('ai-res');

        function speak(text) {
            window.speechSynthesis.cancel();
            const speech = new SpeechSynthesisUtterance(text);
            speech.lang = 'bn-BD';
            speech.rate = 1.1;
            window.speechSynthesis.speak(speech);
            resBox.innerText = text;
        }

        async function analyzeEverything() {
            try {
                const res = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin,ethereum,solana,cardano&vs_currencies=usd&include_24hr_change=true');
                const data = await res.json();
                
                const btc = data.bitcoin.usd;
                const btcChange = data.bitcoin.usd_24h_change;
                
                let prediction = "";
                let events = "‡¶ï‡¶æ‡¶≤‡¶ï‡ßá ‡¶Æ‡¶æ‡¶∞‡ßç‡¶ï‡ßá‡¶ü‡ßá ‡¶´‡ßá‡¶° ‡¶Æ‡¶ø‡¶ü‡¶ø‡¶Ç‡ßü‡ßá‡¶∞ ‡¶∏‡¶Æ‡ßç‡¶≠‡¶æ‡¶¨‡¶®‡¶æ ‡¶Ü‡¶õ‡ßá ‡¶Ø‡¶æ ‡¶¶‡¶æ‡¶Æ ‡¶¨‡¶æ‡ßú‡¶æ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡•§ ";
                
                if(btcChange > 2) {
                    prediction = "‡¶™‡¶∞‡¶¨‡¶∞‡ßç‡¶§‡ßÄ ‡¶è‡¶ï ‡¶Æ‡¶æ‡¶∏‡ßá ‡¶¨‡¶ø‡¶ü‡¶ï‡ßü‡ßá‡¶® ‡¶®‡¶§‡ßÅ‡¶® ‡¶Ö‡¶≤-‡¶ü‡¶æ‡¶á‡¶Æ ‡¶π‡¶æ‡¶á ‡¶∏‡ßç‡¶™‡¶∞‡ßç‡¶∂ ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡•§ ‡¶¨‡¶∞‡ßç‡¶§‡¶Æ‡¶æ‡¶® ‡¶ü‡ßç‡¶∞‡ßá‡¶®‡ßç‡¶° ‡¶Ö‡¶®‡ßÅ‡¶Ø‡¶æ‡ßü‡ßÄ ‡¶è‡¶ü‡¶ø ‡ßÆ‡ß¶ ‡¶π‡¶æ‡¶ú‡¶æ‡¶∞ ‡¶°‡¶≤‡¶æ‡¶∞ ‡¶õ‡¶æ‡ßú‡¶ø‡ßü‡ßá ‡¶Ø‡ßá‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡•§";
                } else {
                    prediction = "‡¶Æ‡¶æ‡¶∞‡ßç‡¶ï‡ßá‡¶ü ‡¶è‡¶ñ‡¶® ‡¶∏‡¶æ‡¶á‡¶°‡¶ì‡ßü‡ßá‡¶ú‡ßá ‡¶Ü‡¶õ‡ßá, ‡¶è‡¶ï ‡¶Æ‡¶æ‡¶∏ ‡¶™‡¶∞ ‡¶è‡¶ü‡¶ø ‡¶¨‡ßú ‡¶¨‡ßç‡¶∞‡ßá‡¶ï‡¶Ü‡¶â‡¶ü ‡¶¶‡¶ø‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡•§";
                }

                return `‡¶Ü‡¶ï‡¶æ‡¶∂ ‡¶≠‡¶æ‡¶á, ‡¶¨‡¶ø‡¶ü‡¶ï‡ßü‡ßá‡¶® ‡¶è‡¶ñ‡¶® ${btc} ‡¶°‡¶≤‡¶æ‡¶∞‡•§ ${events} ‡¶Ü‡¶Æ‡¶æ‡¶∞ ‡¶™‡ßç‡¶∞‡ßá‡¶°‡¶ø‡¶ï‡¶∂‡¶® ‡¶π‡¶≤‡ßã: ${prediction}`;
            } catch (e) { return "‡¶°‡¶æ‡¶ü‡¶æ ‡¶ï‡¶æ‡¶®‡ßá‡¶ï‡¶∂‡¶® ‡¶è‡¶∞‡¶∞ ‡¶≠‡¶æ‡¶á!"; }
        }

        function startAI() {
            const recognition = new (window.webkitSpeechRecognition || window.SpeechRecognition)();
            recognition.lang = 'bn-BD';

            recognition.onstart = () => { resBox.innerText = "‡¶ó‡ßç‡¶≤‡ßã‡¶¨‡¶æ‡¶≤ ‡¶∏‡¶æ‡¶∞‡ßç‡¶≠‡¶æ‡¶∞ ‡¶∏‡ßç‡¶ï‡ßç‡¶Ø‡¶æ‡¶® ‡¶ï‡¶∞‡¶õ‡¶ø..."; };

            recognition.onresult = async (event) => {
                const msg = event.results[0][0].transcript.toLowerCase();
                
                if (msg.includes("‡¶¶‡¶æ‡¶Æ") || msg.includes("‡¶≠‡¶¨‡¶ø‡¶∑‡ßç‡¶Ø‡¶§") || msg.includes("‡¶è‡¶ï ‡¶Æ‡¶æ‡¶∏") || msg.includes("‡¶ï‡¶æ‡¶≤‡¶ï‡ßá")) {
                    speak("‡¶¶‡¶æ‡¶Å‡ßú‡¶æ‡¶® ‡¶Ü‡¶ï‡¶æ‡¶∂ ‡¶≠‡¶æ‡¶á, ‡¶Ü‡¶Æ‡¶ø ‡ßß ‡¶≤‡¶ï‡ßç‡¶∑ ‡¶°‡ßá‡¶ü‡¶æ ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü ‡¶¨‡¶ø‡¶∂‡ßç‡¶≤‡ßá‡¶∑‡¶£ ‡¶ï‡¶∞‡ßá ‡¶≠‡¶¨‡¶ø‡¶∑‡ßç‡¶Ø‡ßé‡¶¨‡¶æ‡¶£‡ßÄ ‡¶ï‡¶∞‡¶õ‡¶ø...");
                    const analysis = await analyzeEverything();
                    speak(analysis);
                } else {
                    speak("‡¶Ü‡¶Æ‡¶ø ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶ï‡¶•‡¶æ ‡¶∂‡ßÅ‡¶®‡ßá‡¶õ‡¶ø‡•§ ‡¶Æ‡¶æ‡¶∞‡ßç‡¶ï‡ßá‡¶ü ‡¶á‡¶≠‡ßá‡¶®‡ßç‡¶ü ‡¶¨‡¶æ ‡¶≠‡¶¨‡¶ø‡¶∑‡ßç‡¶Ø‡¶§‡ßá‡¶∞ ‡¶¶‡¶æ‡¶Æ ‡¶ú‡¶æ‡¶®‡¶§‡ßá ‡¶™‡ßç‡¶∞‡¶∂‡ßç‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®‡•§");
                }
            };
            recognition.start();
        }
